{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // ✅ this is CRUCIAL
    "types": ["react"]   // ✅ explicitly include react types
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/types/react-markdown.d.ts"],
  "exclude": ["node_modules"]
}
